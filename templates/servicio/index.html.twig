{% extends 'base.html.twig' %}

{% block title %}Servicio index{% endblock %}

{% block body %}
    <h1>Servicio index</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Precio</th>
        </tr>
        </thead>
        <tbody>
        {% for servicio in servicios %}
            <tr>
                <td>{{ servicio.id }}</td>
                <td>{{ servicio.nombre }}</td>
                <td>{{ servicio.precio }} €</td> <td>
                <td>
                    {# He añadido clases 'btn' para que los enlaces parezcan botones #}
                    <a href="{{ path('app_servicio_show', {'id': servicio.id}) }}" class="btn btn-sm btn-info">Ver</a>
                    <a href="{{ path('app_servicio_edit', {'id': servicio.id}) }}" class="btn btn-sm btn-warning">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_servicio_new') }}" class="btn btn-primary">Crear nuevo</a>
{% endblock %}
